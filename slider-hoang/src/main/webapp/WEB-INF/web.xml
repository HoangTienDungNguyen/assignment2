<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
         version="6.0">

    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    
    <!-- RESTful API Security -->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>REST API</web-resource-name>
            <url-pattern>/resources/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>RestGroup</role-name>
            <role-name>Admin</role-name>
        </auth-constraint>
    </security-constraint>

    <!-- JSF Slider Pages Security -->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Slider Pages</web-resource-name>
            <url-pattern>/Slider/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>JsfGroup</role-name>
            <role-name>Admin</role-name>
        </auth-constraint>
    </security-constraint>

    <!-- Admin Area Security -->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Admin Area</web-resource-name>
            <url-pattern>/appuser/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>Admin</role-name>
        </auth-constraint>
    </security-constraint>

    <!-- Public Index Page -->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Public Page</web-resource-name>
            <url-pattern>/index.xhtml</url-pattern>
        </web-resource-collection>
    </security-constraint>
    
    <!-- Authentication Mechanism -->
    <login-config>
        <auth-method>BASIC</auth-method>
        <realm-name>SliderAppRealm</realm-name>
    </login-config>

    <!-- Security Roles -->
    <security-role>
        <role-name>RestGroup</role-name>
    </security-role>
    <security-role>
        <role-name>JsfGroup</role-name>
    </security-role>
    <security-role>
        <role-name>Admin</role-name>
    </security-role>

    <!-- JSF Configuration -->
    <servlet>
        <servlet-name>FacesServlet</servlet-name>
        <servlet-class>jakarta.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>FacesServlet</servlet-name>
        <url-pattern>*.xhtml</url-pattern>
    </servlet-mapping>

    <!-- Welcome File -->
    <welcome-file-list>
        <welcome-file>sliders.html</welcome-file>
    </welcome-file-list>
</web-app>
